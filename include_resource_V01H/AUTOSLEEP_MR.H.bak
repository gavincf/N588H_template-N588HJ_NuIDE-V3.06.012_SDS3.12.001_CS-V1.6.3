

MR_SET_AUTOCNT_2B MACRO VALUE
; * 42.6ms
	LDA	#.LOW.VALUE
	STA	WB_AUTOCNT0
	LDA	#.HIGH.VALUE
	STA	WB_AUTOCNT01
	LDA	#C_AUTO_CNT_BIT
	TRB	<USER_FLAG_B
	ENDM

MR_SET_AUTOCNT_1B MACRO VALUE
; * 42.6ms
	LDA	#.LOW.VALUE
	STA	WB_AUTOCNT0
	LDA	#C_AUTO_CNT_BIT
	TRB	<USER_FLAG_B
	ENDM

	
MR_SET_AUTOCNT1 MACRO
; * 42.6ms
.IF ( C_AUTOSLEEP_1B .EQ. 1 )
	MR_SET_AUTOCNT_1B T0003S_21
.ENDIF

.IF ( C_AUTOSLEEP_2B .EQ. 1 )
	MR_SET_AUTOCNT_2B T0003S_21
.ENDIF

	ENDM

	
MR_SET_AUTOCNT2 MACRO
;for no midi / note / speech playing.
; * 42.6ms

.IF ( C_AUTOSLEEP_1B .EQ. 1 )
	MR_SET_AUTOCNT_1B T0005S_42
.ENDIF

.IF ( C_AUTOSLEEP_2B .EQ. 1 )
	MR_SET_AUTOCNT_2B T1800S_42
;debug
;	MR_SET_AUTOCNT_2B T0020S_42
.ENDIF

	ENDM


MR_SET_AUTOCNT2_TEST MACRO
.IF ( C_AUTOSLEEP_1B .EQ. 1 )
	MR_SET_AUTOCNT_1B T0005S_42
.ENDIF

.IF ( C_AUTOSLEEP_2B .EQ. 1 )
;	MR_SET_AUTOCNT_2B T0020S_42
	MR_SET_AUTOCNT_2B T0020S_21
.ENDIF
ENDM


MR_STOP_AUTOCNT MACRO

.IF ( C_AUTOSLEEP_1B .EQ. 1 )
	MR_SET_AUTOCNT_1B CNT_STOP
.ENDIF

.IF ( C_AUTOSLEEP_2B .EQ. 1 )
	MR_SET_AUTOCNT_2B CNT_STOP
.ENDIF

	ENDM

	
