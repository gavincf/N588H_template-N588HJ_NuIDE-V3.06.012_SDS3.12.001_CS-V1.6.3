
;IN: EQU_NO
;OUT: 0:EQU END,1: BUSY
BK0_PLAY_EQU:
;0-19: question
	LDA	EQU_NO; 
	ASL A
	ASL A
	CLC
	ADC	EQU_NO_CNT

	TAX
	LDA	EQU_TABLE,X
	CMP	#CS_END
	BEQ	BK0_PLAY_EQU_END; END
	BIT	#C_BIT7
	BNE	BK0_PLAY_EQU_S10
	STA	SOUND_NO

	JSR	BK0_PLAY_SP
	MR_SET_EQU_DLYCNT CNT_STOP
	MR_SET_EQU_FG
	RTS
	
BK0_PLAY_EQU_S10:
;DELAY IDX
	AND	#07FH
	ASL	A
	TAX

	MR_SET_EQU_FG

	JMP	(BK0_PLAY_EQU_TBL0,X)
	
BK0_PLAY_EQU_TBL0:
	DW	BK0_PLAY_EQU_TBL0_0
	DW	BK0_PLAY_EQU_TBL0_1
	DW	BK0_PLAY_EQU_TBL0_2
	DW	BK0_PLAY_EQU_TBL0_3
	

BK0_PLAY_EQU_END:
	MR_SET_EQU_DLYCNT CNT_STOP
	MR_SET_EQU_FG
	LDA	#0
	RTS

BK0_PLAY_EQU_TBL0_0:
	MR_SET_EQU_DLYCNT T000504MS
	RTS
BK0_PLAY_EQU_TBL0_1:
	MR_SET_EQU_DLYCNT T001000MS
	RTS

BK0_PLAY_EQU_TBL0_2:
	MR_SET_EQU_DLYCNT T000504MS
	RTS

BK0_PLAY_EQU_TBL0_3:
	MR_SET_EQU_DLYCNT T000504MS
	RTS


	




